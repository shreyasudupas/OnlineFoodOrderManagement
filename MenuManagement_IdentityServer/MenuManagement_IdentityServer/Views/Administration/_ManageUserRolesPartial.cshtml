@model ManagerUserRole
@{

}

<div class="modal fade" id="manageUserRole" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- header-->
            <div class="modal-header">
                <h4>Manage User Role</h4>
                <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
            </div>

            <!--body-->
            <div class="modal-body">
                <form action="ManageUserRoles">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    @if (Model.Role.Any())
                    {
                        <table id="modalDataTableId" class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Rolename</th>
                                    <th>Selection</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Role.Count; i++)
                                {
                                    <tr id="row@(i+1)">
                                        <td><label>@(i+1)</label></td>
                                        <td>
                                            <label class="form-label">@Model.Role[i].RoleName</label>
                                        </td>
                                        <td>
                                            <input class="form-check-input" type="checkbox" asp-for="@Model.Role[i].IsSelected" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="card">
                            <div class="card-header">
                                <h5>No Roles present to add</h5>
                            </div>
                        </div>
                    }

                </form>
            </div>

            <!--footer-->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
                @if (Model.Role.Any())
                {
                    <button type="button" class="btn btn-primary" data-save="modal">Save</button>
                }
            </div>
        </div>
    </div>
</div>
