    //Identity MicroService Server
    {
      "DownstreamPathTemplate": "/api/v1/user/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          //"Port": 44301
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/gateway/user/{everything}",
      "UpstreamHttpMethod": [ "Post", "Get" ]
